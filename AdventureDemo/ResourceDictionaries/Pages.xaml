<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AdventureDemo">

    <Grid x:Key="OverviewEntry" x:Shared="false">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="ObjectName">Name</TextBlock>
            <TextBlock Grid.Column="1" Name="ObjectHolding">Holding</TextBlock>
            <TextBlock Grid.Column="2" Name="ObjectAction">Action</TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Name="ObjectContents" Margin="20 0 20 0">
            </StackPanel>
        </Grid>
    </Grid>

    <Border x:Key="OverviewPage" x:Shared="false" Style="{StaticResource OverviewPageStyle}">
        <StackPanel>
            <Border>
                <ScrollViewer MinHeight="300" MaxHeight="300" MinWidth="650" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="Contents">
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border>
                <ScrollViewer MinHeight="500" MaxHeight="500" MinWidth="650" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="Events">
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Border>

</ResourceDictionary>