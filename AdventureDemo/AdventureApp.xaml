                <ResourceDictionary Source="/ResourceDictionaries/ContextMenuStyle.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/OverviewPages.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/DescriptivePages.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/MenuPages.xaml" />
